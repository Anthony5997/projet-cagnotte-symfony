
<div class="card">
    <div class="card-content">
        <div class="row">
        {% if formCreated is defined %}
                {{ form_start(formCreated, {'attr': {'class': 'col s12'}}) }}
                <div class="input-field col s12 l6">
                    {% if not campaignName %}
                    {{ form_widget(formCreated.title) }}
                    {{ form_label(formCreated.title, 'Nom de la campagne') }}
                    {% else %}
                    {{ form_widget(formCreated.title,{'attr' : {'value' : campaignName}})}}
                    {{ form_label(formCreated.title, 'Nom de la campagne') }}
                    {% endif %}
                </div>
                <div class="input-field col s12 l6">
                    {{ form_widget(formCreated.email, {'attr' : {'value' : user.email}}) }}
                    {{ form_label(formCreated.email, 'Email') }}
                </div>
                <div class="input-field col s12 l8">
                    {{ form_widget(formCreated.name, {'attr' : {'value' : user.name}})}}
                    {{ form_label(formCreated.name, 'Nom') }}
                </div>
                <div class="input-field col s12">
                    {{ form_label(formCreated.content) }}
                    {{ form_widget(formCreated.content) }}
                    </div>
                <div class="input-field col s12 l6">
                    {{ form_label(formCreated.goal) }}
                    {{ form_widget(formCreated.goal, {'attr': {'class': 'validate'}}) }}
                </div>
                <button class="btn btn-large waves-effect waves-light pink lighten-1 col s12" style="margin-top: 20px;" type="submit" name="action">
                    {{ button_label|default('Save') }}
                    <i class="material-icons right">send</i>
                </button>
                {{ form_end(formCreated) }}
            {% endif %}
            {% if formEdit is defined %}
                    {{ form_start(formEdit, {'attr': {'class': 'col s12'}}) }}
                <div class="input-field col s12 l6">
                    {{ form_widget(formEdit.title,{'attr' : {'value' : campaign.title}})}}
                    {{ form_label(formEdit.title, 'Nom de la campagne') }}
                </div>
                <div class="input-field col s12 l6">
                    {{ form_widget(formEdit.email, {'attr' : {'value' : campaign.email}}) }}
                    {{ form_label(formEdit.email, 'Email') }}
                </div>
                <div class="input-field col s12 l8">
                    {{ form_widget(formEdit.name, {'attr' : {'value' : campaign.name}})}}
                    {{ form_label(formEdit.name, 'Nom') }}
                </div>
                <div class="input-field col s12">
                    {{ form_label(formEdit.content) }}
                    {{ form_widget(formEdit.content, {'attr': {'id': 'description'}}) }}
                    </div>
                <div class="input-field col s12 l6">
                    {{ form_label(formEdit.goal) }}
                    {{ form_widget(formEdit.goal, {'attr': {'class': 'validate'}}) }}
                </div>
                <button class="btn btn-large waves-effect waves-light pink lighten-1 col s12" style="margin-top: 20px;" type="submit" name="action">
                    {{ button_label|default('Save') }}
                    <i class="material-icons right">send</i>
                </button>
                {{ form_end(formEdit) }}
            {% endif %}
        </div>
    </div>
</div>
