
<div class="card">
                <div class="card-content">
                    <div class="row">
                         {{ form_start(form, {'attr': {'class': 'col s12'}}) }}
                            <div class="input-field col s12 l6">
                                {{ form_label(form.name, 'Votre nom') }}
                                {{ form_widget(form.name, {'attr': {'class': 'validate'}}) }}

                            </div>
                            <div class="input-field col s12 l6">
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email, {'attr': {'class': 'validate'}}) }}
                            </div>
                            <div class="input-field col s12 l8">
                                {{ form_label(form.title)}}
                                {{ form_widget(form.title, {'attr': {'class': 'validate'}}) }}
                            </div>
                            <div class="input-field col s12">
                                {{ form_label(form.content) }}
                                {{ form_widget(form.content, {'attr': {'class': 'materialize-textarea'}}) }}
                             </div>
                            <div class="input-field col s12 l6">
                                {{ form_label(form.goal) }}
                                {{ form_widget(form.goal, {'attr': {'class': 'validate'}}) }}
                            </div>
                            <button class="btn btn-large waves-effect waves-light pink lighten-1 col s12" style="margin-top: 20px;" type="submit" name="action">
                                {{ button_label|default('Save') }}
                                <i class="material-icons right">send</i>
                            </button>
                           {{ form_end(form) }}
                    </div>
                </div>
            </div>
